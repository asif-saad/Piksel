<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Tertiary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/PhotoPostBidProfilePic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/PhotoPostBidName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/PhotoPostBidPrice"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/PhotoPostBidProfilePic"
            android:text="tom"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/PhotoPostTimeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/PhotoPostBidPrice"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/PhotoPostBidName"
            android:text="Time"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <TextView
            android:id="@+id/PhotoPostBidPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/PhotoPostBidProfilePic"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/PhotoPostBidProfilePic"
            android:text="Price"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>